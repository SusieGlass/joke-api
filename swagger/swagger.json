{
  "openapi": "3.0.0",
  "info": {
    "title": "Joke API",
    "version": "1.0.0",
    "description": "API pour récupérer des blagues"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1"
    }
  ],
  "paths": {
    "/blagues": {
      "get": {
        "summary": "Récupérer toutes les blagues",
        "responses": {
          "200": {
            "description": "Une liste de blagues",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Joke"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Ajouter une nouvelle blague",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JokeInput"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Blague ajoutée avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Joke"
                }
              }
            }
          }
        }
      }
    },
    "/blagues/{id}": {
      "get": {
        "summary": "Récupérer une blague par son ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "L'ID de la blague à récupérer"
          }
        ],
        "responses": {
          "200": {
            "description": "Une blague",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Joke"
                }
              }
            }
          },
          "404": {
            "description": "Blague non trouvée"
          }
        }
      }
    },
    "/random": {
      "get": {
        "summary": "Récupérer une blague aléatoire",
        "responses": {
          "200": {
            "description": "Une blague aléatoire",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Joke"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Joke": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "text": {
            "type": "string",
            "example": "Pourquoi les plongeurs plongent-ils toujours en arrière ? Parce que sinon ils tombent dans le bateau."
          }
        }
      },
      "JokeInput": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "example": "Pourquoi les plongeurs plongent-ils toujours en arrière ? Parce que sinon ils tombent dans le bateau."
          }
        },
        "required": ["text"]
      }
    }
  }
}
